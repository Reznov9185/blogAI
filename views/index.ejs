<!DOCTYPE html>
<html lang="en">
	<%- include('partials/header') %>
<body>
	<%- include('partials/navbar') %>
	<link rel="stylesheet" href="./css/style.css"> 
	<main role="main">
		<div class="container">
			<div class="row">
				<% data.forEach((d, i) => { %>
					<div class="col-sm-6 py-5">
						<div class="card">
							<h5 class="card-header"><%= d.title %></h5>
							<div class="card-body">
							  <p class="card-text"><%- d.content.substring(0,200) %></p>
							  <a class="btn btn-secondary" href="/blogs/<%= d._id %>" role="button">View details »</a>
							  <a class="btn btn-primary" href="/blogs/report/<%= d._id %>" role="button">AI Report »</a>
							</div>
						  </div>
					</div>
				<% }) %>
			</div>
			<hr>
		  </div>
		  <div class="container">
			<button type="button" class="btn btn-primary btn-lg btn-block">
				<a href="/blogs/create">Create Blog</a>
			</button>
		  </div>
	</main>
	<%- include('partials/footer') %>
	<%- include('partials/bootstrap_scripts') %>
</body>
</html>
