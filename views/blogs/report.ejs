<!DOCTYPE html>
<html lang="en">
	<%- include('../partials/header') %>
<body>
	<%- include('../partials/navbar') %>
	<link rel="stylesheet" href="../../css/style.css"> 
	<main role="main">
		<div class="container">
            <h2 class="title py-4">Report</h2>
			<div class="col-md-12">
                <% data.forEach((d, i) => { %>
					<div class="col-sm-6 py-5">
						<div class="card">
							<h5 class="card-header"><%= d.sentence %></h5>
							<div class="card-body">
							  <p class="card-text"><%- JSON.stringify(d.classification) %></p>
							</div>
						  </div>
					</div>
				<% }) %>
            </div>
			<hr>
		  </div>
		  <div class="container">
			<button type="button" class="btn btn-success btn-lg btn-block">
				<a href="/blogs/edit/<%= data._id%>">Update Blog</a>
			</button>
			<button type="button" class="btn btn-danger btn-lg btn-block">
				<a href="/blogs/delete/<%= data._id%>?_method=DELETE" onclick="return confirm('Are you sure?')">
					Delete!
				</a>
			</button>
		  </div>
	</main>
	<%- include('../partials/footer') %>
	<%- include('../partials/bootstrap_scripts') %>
</body>
</html>
